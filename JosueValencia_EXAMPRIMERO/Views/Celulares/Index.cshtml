@model IEnumerable<JosueValencia_EXAMPRIMERO.Models.Celulares>

@{
    ViewData["Title"] = "Examen Programación JV";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        /* Fondo general con tono cálido */
        body {
            background-color: #F9E2AE; /* Fondo amarillo claro */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            margin: 0;
            display: flex;
            justify-content: flex-start; /* Alineación superior */
            align-items: center;
            flex-direction: column;
            padding-top: 0; /* Espacio superior mínimo */
        }

        /* Contenedor principal */
        .container {
            text-align: center;
            padding: 20px;
            max-width: 800px;
            width: 100%;
        }

        h1 {
            font-size: 2.5rem;
            color: #264653; /* Azul verdoso oscuro */
            margin-bottom: 20px;
            font-weight: bold;
        }

        /* Botón Crear Nuevo */
        .create-link {
            background-color: #E76F51; /* Color rojo anaranjado */
            color: #FFFFFF;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            margin-bottom: 20px;
            display: inline-block;
            transition: background-color 0.3s;
        }

            .create-link:hover {
                background-color: #F4A261; /* Color de hover en naranja */
            }

        /* Tabla de datos */
        .table-container {
            margin-top: 20px;
            overflow-x: auto;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            background-color: #264653; /* Fondo azul verdoso */
            border-radius: 5px;
            overflow: hidden;
        }

            .table th, .table td {
                padding: 15px;
                color: #FFFFFF;
                text-align: center;
            }

            .table th {
                background-color: #2A9D8F; /* Fondo azul verdoso más claro para encabezados */
                text-transform: uppercase;
                font-size: 0.9rem;
            }

            .table tr:nth-child(even) {
                background-color: #3D5A80; /* Alterna filas en azul grisáceo */
            }

            .table tr:hover {
                background-color: #457B9D; /* Efecto hover */
            }

        .actions a {
            color: #F4A261;
            text-decoration: none;
            font-weight: bold;
            margin: 0 5px;
        }

            .actions a:hover {
                color: #E76F51;
            }

        /* Estilo de pie de página */
        footer {
            font-size: 0.9rem;
            color: #555;
            padding: 10px;
            background-color: #F4A261;
            width: 100%;
            text-align: center;
            color: #FFFFFF;
        }

            footer a {
                color: #E76F51;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>

    <!-- Contenido principal alineado hacia la parte superior -->
    <div class="container">
        <h1>Bienvenido a mi Examen Programación JV - Celulares</h1>

        <!-- Botón Crear Nuevo -->
        <a class="create-link" asp-action="Create">Crear Nuevo</a>

        <!-- Tabla de datos -->
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Modelo</th>
                        <th>Año</th>
                        <th>Precio</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Modelo)</td>
                            <td>@Html.DisplayFor(modelItem => item.Anio)</td>
                            <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                            <td class="actions">
                                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                            </td>
                        </tr>
                    }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pie de página -->
    <footer>
        © 2024 - JosueValencia_EXAMPRIMERO - <a href="#">Privacy</a>
    </footer>

</body>
</html>
